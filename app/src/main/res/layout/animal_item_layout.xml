<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/main_animal_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="16dp"
    android:background="#E8E8E8">

    <ImageView
        android:id="@+id/star_imageview"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/species_textview"
        android:src="@drawable/ic_star"/>

    <TextView
        android:id="@+id/species_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/category_textview"
        app:layout_constraintStart_toEndOf="@id/star_imageview"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="#747474"
        tools:text="species"
        />

    <TextView
        android:id="@+id/category_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/species_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/star_imageview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="16dp"
        android:textColor="#747474"
        tools:text="category"
        />


</androidx.constraintlayout.widget.ConstraintLayout>